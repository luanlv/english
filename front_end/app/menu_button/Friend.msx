      <div className="notifyWr">
        {(wsCtrl.data.makeFriend.display)?(
            <div className="inNotify"
                 config={
                    function(el, isInit, ctx){
                      if(!isInit){
                      console.log("////");
                         $(el).on('mouseleave', function(){
