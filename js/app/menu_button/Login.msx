                              onHide: function(){
                                var contentWr = $(this).children().first();
                                contentWr.addClass('loading')
                              }
                            })
                            .modal('show')

                             rd.nav(function(){ctrl.displayLogin = false;m.redraw()})
                        })

                      }
                    }
                  }
                >Signup</a>
              </div>
            </form>
          </div>
        </div>):""}
      </div>
      <div className="ui modal sign-up" >
        <div className="ui segment loading" style="min-height: 500px;">
        </div>
      </div>
    </div>
)}

module.exports = LoginButton;